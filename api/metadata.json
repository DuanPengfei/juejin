{
  "api/juejin/hot.ts": {
    "name": "api_juejin_hot",
    "description": "Most hot articles on juejin.cn",
    "input": {
      "type": "object",
      "properties": {
        "topic": {
          "type": "string"
        }
      }
    },
    "output": {
      "type": "object",
      "properties": {
        "hotArticles": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "author": {
                "type": "object",
                "properties": {
                  "avatar": {
                    "type": "string"
                  },
                  "is_followed": {
                    "type": "boolean"
                  },
                  "name": {
                    "type": "string"
                  },
                  "user_id": {
                    "type": "string"
                  }
                },
                "required": [
                  "avatar",
                  "is_followed",
                  "name",
                  "user_id"
                ]
              },
              "author_counter": {
                "type": "object",
                "properties": {
                  "followee": {
                    "type": "integer"
                  },
                  "follower": {
                    "type": "integer"
                  },
                  "hot_rank": {
                    "type": "integer"
                  },
                  "level": {
                    "type": "integer"
                  },
                  "like": {
                    "type": "integer"
                  },
                  "power": {
                    "type": "integer"
                  },
                  "publish": {
                    "type": "integer"
                  },
                  "view": {
                    "type": "integer"
                  }
                },
                "required": [
                  "followee",
                  "follower",
                  "hot_rank",
                  "level",
                  "like",
                  "power",
                  "publish",
                  "view"
                ]
              },
              "content": {
                "type": "object",
                "properties": {
                  "author_id": {
                    "type": "string"
                  },
                  "brief": {
                    "type": "string"
                  },
                  "category_id": {
                    "type": "string"
                  },
                  "content_id": {
                    "type": "string"
                  },
                  "ctime": {
                    "type": "integer"
                  },
                  "format": {
                    "type": "string"
                  },
                  "item_type": {
                    "type": "integer"
                  },
                  "mtime": {
                    "type": "integer"
                  },
                  "status": {
                    "type": "integer"
                  },
                  "tag_ids": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "title": {
                    "type": "string"
                  }
                },
                "required": [
                  "author_id",
                  "brief",
                  "category_id",
                  "content_id",
                  "ctime",
                  "format",
                  "item_type",
                  "mtime",
                  "status",
                  "tag_ids",
                  "title"
                ]
              },
              "content_counter": {
                "type": "object",
                "properties": {
                  "collect": {
                    "type": "integer"
                  },
                  "comment_count": {
                    "type": "integer"
                  },
                  "hot_rank": {
                    "type": "integer"
                  },
                  "interact_count": {
                    "type": "integer"
                  },
                  "like": {
                    "type": "integer"
                  },
                  "view": {
                    "type": "integer"
                  }
                },
                "required": [
                  "collect",
                  "comment_count",
                  "hot_rank",
                  "interact_count",
                  "like",
                  "view"
                ]
              },
              "user_interact": {
                "type": "object",
                "properties": {
                  "is_follow": {
                    "type": "boolean"
                  },
                  "is_user_collect": {
                    "type": "boolean"
                  },
                  "is_user_like": {
                    "type": "boolean"
                  }
                },
                "required": [
                  "is_follow",
                  "is_user_collect",
                  "is_user_like"
                ]
              }
            },
            "required": [
              "author",
              "author_counter",
              "content",
              "content_counter",
              "user_interact"
            ]
          }
        }
      },
      "required": [
        "hotArticles"
      ]
    }
  },
  "api/juejin/policy.ts": {
    "name": "api_juejin_policy",
    "description": "Say hello to the user when he introduces himself",
    "input": {
      "type": "object",
      "properties": {
        "name": {
          "description": "name of user",
          "type": "string"
        }
      }
    },
    "output": {
      "type": "object",
      "properties": {
        "message": {
          "description": "reply to greet the user",
          "type": "string"
        }
      },
      "required": [
        "message"
      ]
    }
  },
  "api/juejin/search.ts": {
    "name": "api_juejin_search",
    "description": "Search top articles for specific topic on juejin.cn 指定主题搜索掘金（juejin.cn）上的热门文章",
    "input": {
      "type": "object",
      "properties": {
        "topic": {
          "type": "string"
        }
      },
      "required": [
        "topic"
      ]
    },
    "output": {
      "type": "object",
      "properties": {
        "searchResults": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "brief": {
                "description": "digest of the content",
                "type": "string"
              },
              "cover_image": {
                "type": "string"
              },
              "link_url": {
                "type": "string"
              },
              "title": {
                "type": "string"
              }
            },
            "required": [
              "brief",
              "cover_image",
              "link_url",
              "title"
            ]
          }
        }
      },
      "required": [
        "searchResults"
      ]
    }
  }
}